@using DataAccess.Entities;
@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-light" id="login" asp-controller="Adverts" asp-action="MyAdverts">Ваш профіль</a>
    </li>
    <li class="nav-item m-lg-3">
        <button type="button" class="btn btn-light">
            <a class="nav-link text-dark p-1" asp-controller="Adverts" asp-action="Create">Додати оголошення</a>
        </button>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Adverts", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-light">Вийти</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-light" id="login" asp-area="Identity" asp-page="/Account/Login">Увійти</a>
    </li>
}