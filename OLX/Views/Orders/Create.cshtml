@model DataAccess.Entities.Advert

<link href="~/css/create-order.css" rel="stylesheet" type="text/css" />

<div class="container">
    <div class="section d-flex flex-column">
        <h1 class="text-center mb-3">@Model.Name - @Model.Price UAH</h1>
        <div>
            <div class=" d-flex justify-content-between">
                <div class="d-flex flex-column">
                    <h4>Служба доставки</h4>
                    <p>Укр пошта</p>
                </div>
                <div class="d-flex flex-column">
                    <h4>Контактні дані</h4>
                    <label>Ім'я*</label>
                    <input class="info" />
                    <label>Прізвище</label>
                    <input class="info" />
                    <label>Місто</label>
                    <input class="info" />
                    <label>Номер телефону</label>
                    <input type="number" class="info" />
                    <label>Email</label>
                    <input type="email" class="info" />
                </div>
            </div>
        </div>
        <div class="mt-3 d-flex justify-content-end">
            <a class="payBtn" asp-controller="Orders" asp-action="CreateOrder" asp-route-advertId="@Model.Id">Оплатити</a>
        </div>
    </div>
</div>